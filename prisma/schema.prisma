generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  username        String   @unique
  displayName     String?
  email           String   @unique
  password        String
  role            Role     @default(USER)
  walletAddress   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  events          Event[]
  tickets         Ticket[]
  revenueReceivers RevenueReceiver[]
  transactions    Transaction[]
  resaleListings  ResaleListing[]
}

enum Role {
  USER
  EO
  SUPERADMIN
}

model Event {
  id              String      @id @default(uuid())
  name            String
  bannerUrl       String
  location        String
  startDate       DateTime
  endDate         DateTime
  status          EventStatus @default(DRAFT)
  creatorId       String
  creator         User        @relation(fields: [creatorId], references: [id])
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  ticketTypes     TicketType[]
  revenueReceivers RevenueReceiver[]
  transactions    Transaction[]
  scanLogs        ScanLog[]
}

enum EventStatus {
  DRAFT
  PENDING_APPROVAL
  ACCEPTED
  REJECTED
  COMPLETED
}

model RevenueReceiver {
  id              String   @id @default(uuid())
  eventId         String
  event           Event    @relation(fields: [eventId], references: [id])
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])
  email           String
  percentage      Float
  bankAccount     String?
  bankName        String?
  accountHolder   String?
  walletAddress   String?
  approvalStatus  ApprovalStatus @default(PENDING)
  rejectionReason String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  withdrawals     Withdrawal[]

  @@unique([eventId, email])
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model TicketType {
  id              String   @id @default(uuid())
  eventId         String
  event           Event    @relation(fields: [eventId], references: [id])
  name            String
  price           Float
  stock           Int
  sold            Int      @default(0)
  saleStartDate   DateTime
  saleEndDate     DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tickets         Ticket[]
}

model Ticket {
  id              String   @id @default(uuid())
  ticketTypeId    String
  ticketType      TicketType @relation(fields: [ticketTypeId], references: [id])
  ownerId         String
  owner           User     @relation(fields: [ownerId], references: [id])
  purchasePrice   Float
  nftTokenId      String?
  nftMetadataUri  String?
  eligibleForResale Boolean @default(true)
  isUsed          Boolean  @default(false)
  usedAt          DateTime?
  qrSignature     String
  pdfVersion      Int      @default(1)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  transactions    Transaction[]
  scanLogs        ScanLog[]
  resaleListings  ResaleListing[]
}

model Transaction {
  id              String   @id @default(uuid())
  ticketId        String
  ticket          Ticket   @relation(fields: [ticketId], references: [id])
  buyerId         String
  buyer           User     @relation(fields: [buyerId], references: [id])
  eventId         String
  event           Event    @relation(fields: [eventId], references: [id])
  amount          Float
  paymentMethod   PaymentMethod
  paymentStatus   PaymentStatus @default(PENDING)
  paymentProvider String?
  externalTxId    String?
  txHash          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum PaymentMethod {
  BANK_TRANSFER
  VA
  QRIS
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model ResaleListing {
  id              String   @id @default(uuid())
  ticketId        String
  ticket          Ticket   @relation(fields: [ticketId], references: [id])
  sellerId        String
  seller          User     @relation(fields: [sellerId], references: [id])
  price           Float
  status          ResaleStatus @default(ACTIVE)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([ticketId, status])
}

enum ResaleStatus {
  ACTIVE
  SOLD
  CANCELLED
}

model Withdrawal {
  id              String   @id @default(uuid())
  receiverId      String
  receiver        RevenueReceiver @relation(fields: [receiverId], references: [id])
  amount          Float
  wIDRAmount      Float
  txHash          String?
  status          WithdrawalStatus @default(PENDING)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum WithdrawalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model ScanLog {
  id              String   @id @default(uuid())
  ticketId        String
  ticket          Ticket   @relation(fields: [ticketId], references: [id])
  eventId         String
  event           Event    @relation(fields: [eventId], references: [id])
  scannedAt       DateTime @default(now())
  scannerDevice   String?
  scanResult      ScanResult
}

enum ScanResult {
  SUCCESS
  ALREADY_USED
  BLACKLISTED
  INVALID_SIGNATURE
  NOT_FOUND
}

model PlatformConfig {
  id              String   @id @default(uuid())
  key             String   @unique
  value           String
  updatedAt       DateTime @updatedAt
}

model BlacklistedTicket {
  id              String   @id @default(uuid())
  ticketId        String   @unique
  reason          String
  createdAt       DateTime @default(now())
}